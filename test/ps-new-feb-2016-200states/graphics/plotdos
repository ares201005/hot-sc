
set xlabel "E (eV)"
set ylabel "DOS"

set xtics format "%3.1f"

set lmargin at screen 0.15
set rmargin at screen 0.90
set bmargin at screen 0.16
set tmargin at screen 0.90

set label 1 "(a)" at screen 0.16,0.86

set xrange [-2.0:2.0]
set yrange [0:10]

set xtics 0.5
set mxtics 2

set ytics 2
set mytics 2

p 'DOS-ps.dat' u 1:2 w l lw 5 lc rgb "black" ti ""

pause -1



set term postscript eps color solid enhanced "Arial-Bold" 28
set output "DOS.eps"

replot
