set xrange [0:2.1]
#set yrange [-2200:6000]
set key left

set xlabel "Voltage (V)"
set ylabel "Current (uA)"
set y2label "Power (uW)"

set format y "%3.1f"
set format y2 "%3.1f"
set xtics format "%3.1f"

set xrange [0:2.0]
set yrange [-1.0:2.0]

set xtics 0.5
set ytics 0.5
set mxtics 2
set mytics 2
set my2tics 2

set y2tics
set ytics nomirror
set y2range [0:]

p 'curr-volt.dat' u ($1):($4/1000)                    w l lw 5 lc rgb "black" ti "Dark current",\
  'curr-volt.dat' u ($1):( (-$3/2+$5/2+$4)/1000)      w l lw 5 lc rgb "red"   ti "Light current",\
  'curr-volt.dat' u ($1):(-2*$1*(-$3/2+$5/2+$4)/1000) w l lw 5 lc rgb "blue"  ti "Power" axis x1y2

pause -1



set term postscript eps color solid enhanced "Arial-Bold" 24
set output "curr-hotsc.eps"

replot
