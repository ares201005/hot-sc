set mytics 2
set mxtics 2
set ytics nomirror
set y2tics 
set my2tics 2

p 'curr-freq.dat' u 1:3 w l lw 3 lc rgb "black" ti "Current",\
  'flux-freq.dat' u 1:2 w l lw 3 lc rgb "red"  ti "Absorption" axis x1y2
pause -1

unset y2tics
set ytics mirror

p 'flux-freq.dat' u 1:4 w l lw 3 lc rgb "red" ti "IQE"
pause -1
