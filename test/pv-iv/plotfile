set key left

set xlabel "Voltage (V)"
set ylabel "Current (uA)"
set y2label "Power (uW)"

set format y "%3.1f"
set format y2 "%4.2f"
set xtics format "%3.1f"

set xrange [0:2.05]
set yrange [-0.21:0.6]

set xtics 0.4
set ytics 0.1
set mxtics 2
set mytics 2
set my2tics 2

set y2tics
set ytics nomirror
set y2range [0:]

p 'curr-volt.dat' u 1:($4/1000)          w l lw 5 lc rgb "black" ti "Dark current",\
  'curr-volt.dat' u 1:(($4+$5)/1000)     w l lw 5 lc rgb "blue"  ti "Light current",\
  'curr-volt.dat' u 1:(-$1*($4+$5)/1000) w l lw 5 lc rgb "green" ti "Power" axis x1y2

pause -1

  #'curr-volt.dat' u 1:5             w l lw 5 lc rgb "red"   ti "Light current",\


set term postscript eps color solid enhanced "Arial-Bold" 24
set output "curr-sc.eps"

replot
