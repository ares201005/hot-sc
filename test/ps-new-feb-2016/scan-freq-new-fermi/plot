set mytics 2
set mxtics 2
set ytics nomirror
set y2tics 
set my2tics 2

p 'curr-freq.dat' u 1:3 w l lw 3 lc rgb "black" ti "Current",\
  'flux-freq.dat' u 1:2 w l lw 3 lc rgb "red"  ti "Absorption" axis x1y2
pause -1

unset y2tics
set ytics mirror

#p 'flux-freq.dat' u 1:4 w l lw 3 lc rgb "red" ti "IQE, asy",\

set xrange [0.5:5.5]
set yrange [0:52]

set xlabel "Photon energy (eV)"
set ylabel "IQE (%)"

set key left

p  'offset-0.2/flux-freq.dat' u 1:4 w l lw 4 lc rgb "red" ti "E_f=0.2",\
  'offset-0.4/flux-freq.dat' u 1:4 w l lw 4 lc rgb "blue" ti "E_f=0.4",\
  'offset+0.2/flux-freq.dat' u 1:4 w l lw 2 lc rgb "green" ti "E_f=-0.2",\
  'offset+0.4/flux-freq.dat' u 1:4 w l lw 2 lc rgb "purple" ti "E_f=-0.4",\
  'compare.dat'   u 1:4 w l lw 3 lc rgb "black" ti "E_f=0"

pause -1
